<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlay.Forecast" parent="AppTheme.AppBarOverlay" >
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="forecastList">
        <item name="android:choiceMode">none</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <style name="textWeatherDetailStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>
